<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="air.admin.spring_boot.module.login.mapper.LoginMapper">
    <insert id="regist">

    </insert>

    <select id="selectOneByUsername" resultType="air.admin.spring_boot.module.login.entity.SystemUserEntity">
        SELECT id,
        user_name,
        password,
        name,
        avatarurl,
        status
        FROM users
        WHERE 1=1
        AND user_name = #{username}
</select>
    <select id="selectById" resultType="air.admin.spring_boot.module.login.entity.SystemUserEntity">
        SELECT id,
               user_name,
               password,
               name,
               avatarurl,
               status
        FROM users
        WHERE 1=1
          AND id = #{id}

    </select>
    <select id="findUserByName" resultType="air.admin.spring_boot.module.login.entity.SystemUserEntity">
        SELECT user_name
        FROM users
        WHERE user_name = #{param.username}
    </select>

</mapper>